generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

// Site Configuration - single record for global settings
model SiteConfig {
  id          Int      @id @default(1)
  name        String   @default("Teras Farm")
  tagline     String
  description String
  email       String
  whatsapp    String
  address     String
  instagram   String?
  facebook    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Hero section statistics
model HeroStat {
  id        Int      @id @default(autoincrement())
  value     String
  label     String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Core values for About section
model CoreValue {
  id          Int      @id @default(autoincrement())
  icon        String
  title       String
  description String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// How It Works steps
model HowItWorksStep {
  id          Int      @id @default(autoincrement())
  type        String   // "petambak" or "pembeli"
  step        Int
  icon        String
  title       String
  description String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
}

// Features for WhyChooseUs section
model Feature {
  id          Int      @id @default(autoincrement())
  icon        String
  title       String
  description String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Products
model Product {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  name        String
  description String
  season      String
  sizes       String   // JSON array stored as text
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Testimonials for Partners section
model Testimonial {
  id        Int      @id @default(autoincrement())
  name      String
  location  String
  quote     String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Community Programs
model CommunityProgram {
  id          Int      @id @default(autoincrement())
  icon        String
  title       String
  description String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Blog Articles
model BlogArticle {
  id        Int      @id @default(autoincrement())
  title     String
  excerpt   String
  content   String?
  category  String
  date      String
  readTime  String
  featured  Boolean  @default(false)
  image     String?
  published Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@index([featured])
}

// FAQ entries
model FAQ {
  id        Int      @id @default(autoincrement())
  type      String   // "petambak" or "pembeli"
  question  String
  answer    String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type])
}

// Navigation links
model NavLink {
  id        Int      @id @default(autoincrement())
  name      String
  href      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
